<h1>New Movie!</h1>

<%= render partial: "layouts/errors", locals: {object: @movie} %>


<%= form_for (@movie) do |f| %>

    <%= f.label :title %>
    <%= f.text_field :title %>
    <br>
    <br>
    <%= f.label :description %>
    <%= f.text_area :description %>
    <br>
    <br>
    <%= f.label :image %>
    <%= f.file_field :image %>
    <br>
    <br>
    <%= f.submit %>

<% end %>