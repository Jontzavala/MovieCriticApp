<!DOCTYPE html>
<html>
  <head>
    <title>MovieCriticApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <div>
      <% if logged_in? %>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">MovieCriticApp</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="<%= new_movie_path %>">Add a Movie</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="<%= movies_path %>">All Movies</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="<%= new_review_path %>">Add a Review</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="<%= critic_movies_path(current_critic) %>">My Movies</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="<%= critic_reviews_path(current_critic) %>">My Reviews</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="<%= logout_path %>">Logout</a>
              </li>
              <li class="nav-item">
                <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Disabled</a>
              </li>
            </ul>
            <form class="d-flex">
              <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
              <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
          </div>
        </div>
        </nav>
      <% end %>

    </div>

    <div>
    <%= @error %>
    <%= yield %>
  </body>
</html>
