<!DOCTYPE html>
<html>
  <head>
    <title>MovieCriticApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <div>
      <% if logged_in? %>
      <%= link_to "Add a Movie", new_movie_path %> |
      <%= link_to "Add a Review", new_review_path %> |
      <%= link_to "All Movies", movies_path %> |
      <%= link_to "My Movies", critic_movies_path(current_critic) %> |
      <%= link_to "My Reviews", critic_reviews_path(current_critic) %> |
      <%= link_to "Logout", logout_path, method:"delete" %>
      <% end %>

    </div>

    <div>
    <%= @error %>
    <%= yield %>
  </body>
</html>
